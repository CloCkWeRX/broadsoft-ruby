<h1>Listing the leads</h1>

<input type="text" name="some_name" value="" id="entry">
<%= observe_field "entry", 
:frequency => 1, 
:update => "live-preview", 
:complete => "Element.show('live-preview')", 
:url => { :action => "preview" },
:with => "'search=' + encodeURIComponent(value)" %> 


<div id = "live-preview">
<table cellpadding="5" cellspacing="0" >
  <tr valign="top">
    <th>Name</th>
    <th>Company</th>
    <th>Title</th>
    <th>Cell Phone</th>
    <th>Office Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% for lead in @leads %>
  <tr class="<%= cycle('list-line-odd', 'list-line-even') %>" >
    <td><a href="http://thomashowe.highrisehq.com/people/<%= lead.highrise_lead_id %>">
    <%="#{lead.first_name} #{lead.last_name}"%></a> </td>
    <td><%=h lead.company %></td>
    <td><%=h lead.title %></td>
    <td><%= link_to lead.cell.to_s, :controller => 'call', :action => 'dial', :id => clean_number(lead.cell) %></td>
    <td><%= link_to lead.office_phone.to_s, :controller => 'call', :action => 'dial', :id => clean_number(lead.office_phone) %></td>
    <td><%= link_to 'Show', lead %></td>
    <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
    <td><%= link_to 'Delete', lead, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>

<br />

<%= link_to 'New lead', new_lead_path %>
